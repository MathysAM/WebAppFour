@page "/"
@using System.ComponentModel.DataAnnotations
@using Four.Services
@implements IDisposable
@inject IJSRuntime JS
@inject MqttService MqttService

<PageTitle>Home</PageTitle>

<article class="content px-4">
    <h3 class="mt-4">Connexion MQTT</h3>

    <EditForm Model="credentials" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Utilisateur</label>
            <InputText class="form-control" @bind-Value="credentials.UserName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Mot de passe</label>
            <InputText type="password" class="form-control" @bind-Value="credentials.Password" />
        </div>
        <button type="submit" class="btn btn-primary" disabled="@isWorking">
            @if (isWorking)
            {
                <span class="spinner-border spinner-border-sm"></span>
                @:&nbsp; Connexion...
            }
            else
            {
                @:Connexion
            }
        </button>
    </EditForm>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-3">@errorMessage</div>
    }

    @if (MqttService.IsConnected)
    {
        <h1 class="mt-5">Bienvenue, @MqttService.Username !</h1>
        <button class="btn btn-danger mt-3" @onclick="HandleDisconnect" disabled="@isWorking">
            @if (isWorking)
            {
                <span class="spinner-border spinner-border-sm"></span>
                @:&nbsp; Déconnexion...
        }
            else
            {
                @:Déconnecter
            }
        </button>
    }
</article>

@code {
    private class Credentials
    {
        [Required] public string? UserName { get; set; }
        [Required] public string? Password { get; set; }
    }

    private Credentials credentials = new();
    private bool isWorking;
    private string? errorMessage;

    protected override void OnInitialized()
    {
        MqttService.OnConnectionChanged += StateHasChanged;
        MqttService.OnError += msg =>
        {
            errorMessage = msg;
            StateHasChanged();
        };
    }

    private async Task HandleValidSubmit()
    {
        isWorking = true;
        errorMessage = null;

        await JS.InvokeVoidAsync(
            "connectMqtt",
            "wss://4d1f194df18748a393eeabb274d5e439.s1.eu.hivemq.cloud:8884/mqtt",
            credentials.UserName!,
            credentials.Password!,
            DotNetObjectReference.Create(this)
        );
        // On attend ensuite le JS qui appellera NotifyMqttConnected ou NotifyMqttError
    }

    [JSInvokable]
    public Task NotifyMqttConnected()
    {
        isWorking = false;
        MqttService.SetConnected(true);
        MqttService.SetUsername(credentials.UserName!);
        credentials = new Credentials(); // vide les champs
        StateHasChanged();
        return Task.CompletedTask;
    }

    [JSInvokable]
    public Task NotifyMqttDisconnected()
    {
        isWorking = false;
        MqttService.SetConnected(false);
        StateHasChanged();
        return Task.CompletedTask;
    }

    [JSInvokable]
    public Task NotifyMqttError(string message)
    {
        errorMessage = $"MQTT Erreur : {message}";
        isWorking = false;
        MqttService.SetConnected(false);
        StateHasChanged();
        return Task.CompletedTask;
    }

    private async Task HandleDisconnect()
    {
        isWorking = true;
        errorMessage = null;
        await JS.InvokeVoidAsync("disconnectMqtt");
        // Le callback JS exécutera NotifyMqttDisconnected
    }

    public void Dispose()
    {
        MqttService.OnConnectionChanged -= StateHasChanged;
        MqttService.OnError -= msg => { errorMessage = msg; StateHasChanged(); };
    }
}
